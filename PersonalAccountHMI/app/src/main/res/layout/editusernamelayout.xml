<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editAvatarLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg7"
    android:minWidth="1000dp"
    android:minHeight="1000dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:padding="5dp"
            android:text="Edit Username"
            android:textColor="@color/purple_500"
            android:textSize="40dp" />

        <ImageButton
            android:id="@+id/imageClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:backgroundTint="#99958888"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/close"
            tools:ignore="SpeakableTextPresentCheck" />
    </FrameLayout>

    <EditText
        android:id="@+id/newName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:background="#4ABF6A42"
        android:ems="10"
        android:hint="Enter Username"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/cancelUsername"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="100dp"
            android:backgroundTint="#CC8E8787"
            android:text="CANCEL" />

        <Button
            android:id="@+id/saveUsername"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:backgroundTint="#CC2129BA"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="100dp"
            android:text="SAVE" />


    </FrameLayout>

</LinearLayout>