<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createdialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="256dp"
                android:layout_height="52dp"
                android:layout_marginStart="245dp"
                android:layout_marginTop="5dp"
                android:text="Create Profile"
                android:textColor="@color/black"
                android:textSize="40dp" />

            <ImageButton
                android:id="@+id/closebutton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="176dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="344dp"
                app:srcCompat="@android:drawable/btn_dialog"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <EditText
            android:id="@+id/Name"
            android:layout_width="336dp"
            android:layout_height="48dp"
            android:layout_marginStart="141dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="254dp"
            android:layout_marginBottom="47dp"
            android:ems="10"
            android:hint="Enter Username"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="205dp"
            android:layout_height="31dp"
            android:layout_marginStart="141dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="385dp"
            android:text="Select Avatar"
            android:textColor="@color/black"
            android:textSize="20dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="75dp"
                android:layout_height="75dp">
                <ImageView
                    android:id="@+id/avatar1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/avatar1"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="10dp">
                <ImageView
                    android:id="@+id/avatar2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/avatar2"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="10dp">
                <ImageView
                    android:id="@+id/avatar3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/avatar3"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="20dp">
                <ImageView
                    android:id="@+id/avatar4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/avatar4"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="10dp">
                <ImageView
                    android:id="@+id/avatar5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/avatar5"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="10dp">
                <ImageView
                    android:id="@+id/avatar6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/avatar6"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="10dp">
                <ImageView
                    android:id="@+id/avatar7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/avatar7"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="10dp">
                <ImageView
                    android:id="@+id/avatar8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/avatar8"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:layout_gravity="center">
            <Button
                android:id="@+id/cancelbtn"
                android:layout_width="77dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:text="CANCEL" />

            <Button
                android:id="@+id/savebtn"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginStart="350dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="56dp"
                android:text="SAVE" />


        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>